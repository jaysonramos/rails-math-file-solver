<h2>Viewing Submission</h2>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Submitted By</th>
      <th>File Name</th>
      <th>Math Problems</th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
        <td><%= @user.updated_at.strftime('%D %R') %></td>
        <td><%= @user.name %></td>
        <td><%= @user.math_file_name %></td>
        <td><i>
        <% IO.foreach(@user.math.path) do |line| %>
          <% if /((\(*\d+\s*[-\+\*\/%]+\s*\d+\)*)|(\d+\s*[-\+\*\/%]+\s*))/.match(line) %>
            <%= line + "=" %>
            <%= eval(line) %><br>
          <% end %>
        <% end %></i></td>
        
      </tr>
    
  </tbody>
</table>
<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Back', users_path %>
